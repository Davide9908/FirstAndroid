<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="it.itisplanck.davide.it.conversione.MainActivity">



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/button"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/button_ripple"
                android:onClick="error"
                android:text="@string/Pulsante"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayout"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textKilometri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Kilometri"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayout2"
                android:layout_width="186dp"
                android:layout_height="53dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="100dp"
                app:layout_constraintStart_toEndOf="@+id/inputlayout"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/metri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Metri" />
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

</ScrollView>
